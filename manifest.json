{
  "manifest_version": 3,
  "name": "List Exporter & Screenshotter",
  "version": "1.0",
  "description": "Extract lists from webpages, capture screenshots of items, and export as ZIP.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/html2canvas.min.js", "libs/jszip.min.js", "content.js"]
    }
  ]
}
