{
  "manifest_version": 3,
  "name": "List Exporter & Auto Screenshotter",
  "version": "1.0",
  "description": "Extract lists from webpages, capture screenshots of items, and export as ZIP.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "libs/html2canvas.min.js",
        "libs/jszip.min.js",
        "content.js"
      ]
    }
  ]
}